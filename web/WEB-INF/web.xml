<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>
    <filter>
        <filter-name>ShiroFilter</filter-name>
        <filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ShiroFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>src.servlets.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>src.servlets.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dbUtil</servlet-name>
        <servlet-class>src.db.dbUtil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddVendorServlet</servlet-name>
        <servlet-class>src.servlets.AddVendorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAgentDetailsServlet</servlet-name>
        <servlet-class>src.servlets.UpdateAgentDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPropertyServlet</servlet-name>
        <servlet-class>src.servlets.ViewPropertyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddVendorServlet</servlet-name>
        <url-pattern>/AddVendorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAgentDetailsServlet</servlet-name>
        <url-pattern>/UpdateAgentDetailsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPropertyServlet</servlet-name>
        <url-pattern>/ViewPropertyServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
